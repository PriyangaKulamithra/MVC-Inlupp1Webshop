@model Inlupp1ProduktPresentation.Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Startsida";
}

<div class="text-center">
    <h1 class="display-4">Välkommen till Priyangas växtshop!</h1>
    <p>Välj kategori nedan.</p>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Kategorinamn</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td><a asp-controller="Category" asp-action="Index" asp-route-Id="@category.Id">@category.Name</a></td>
        </tr>
    }
    </tbody>
</table>