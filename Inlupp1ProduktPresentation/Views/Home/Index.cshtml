@model Inlupp1ProduktPresentation.Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Startsida";
}

<div class="text-center">
    <h1 class="display-4">Välkommen till Priyangas växtshop!</h1>
    <p>Välj kategori nedan.</p>
</div>


<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 p-5 text-center" style="letter-spacing: .2em; text-transform: uppercase;">
            <a class="nav-link text-secondary" asp-controller="Category" asp-action="GetProducts" asp-route-Id="@category.Id"><h4>@category.Name</h4></a>
            <p>@category.Description</p>
        </div>
    }
</div>
