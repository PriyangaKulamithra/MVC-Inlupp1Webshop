@model Inlupp1ProduktPresentation.Models.ViewModels.CategoryGetProductsViewModel
@{
    ViewData["Title"] = @Model.CategoryName;
}

<div class="text-center">
    <h1 class="display-4">@Model.CategoryName</h1>
    <hr/>
    <p>@Model.CategoryDescription</p>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Produkt</th>
            <th scope="col">Beskrivning</th>
            <th scope="col">Pris</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td><a asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id">@product.Name</a></td>
                <td>@product.Description</td>
                <td>@product.Price kronor</td>
        </tr>
    }
    </tbody>
</table>