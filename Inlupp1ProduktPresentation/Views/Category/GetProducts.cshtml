@model Inlupp1ProduktPresentation.Models.ViewModels.CategoryGetProductsViewModel
@{
    ViewData["Title"] = @Model.CategoryName;
}



<div class="text-center">
    <h1 class="display-4">@Model.CategoryName</h1>
    <hr/>
    <p>@Model.CategoryDescription</p>
</div>

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-lg-4 col-md-6 p-5 text-center" style="letter-spacing: .2em; text-transform: uppercase;">
            <img class="img-fluid" src="~/img/product/@(product.ImageName).jpeg"/>
            <a class="nav-link text-secondary" asp-controller="Product" asp-action="Details" asp-route-Id="@product.Id"><h4>@product.Name</h4></a>
            <p>
                <b>@product.Description</b><br/>
                @product.Price kronor
            </p>
        </div>
    }
</div>


@section Scripts
{
    <script>
        $(document).ready(function() {

            $(function RenderBreadcrumb() {

                $('.breadcrumbs').append('<li class="breadcrumbs__item"></li>');
                $('a.breadcrumbs__link').removeClass('breadcrumbs__link--active');
                $('li.breadcrumbs__item:last').append('<a href="#" class="breadcrumbs__link breadcrumbs__link--active">@Model.CategoryName</a>');

            });
        });
    </script>
}
